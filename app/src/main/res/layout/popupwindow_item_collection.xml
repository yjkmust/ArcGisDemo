<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/popup_bg_1"
        android:scaleType="fitXY"
        android:id="@+id/imageView2" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@mipmap/popup_bg_3"
        android:scaleType="fitXY"

        android:layout_below="@id/imageView2"
        android:id="@+id/imageView3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/ll_point_mark"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/point_search"/>
            <TextView
                android:id="@+id/tv_search_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点标注"
                android:textColor="#fff"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_line_mark"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/distance_match"/>
            <TextView
                android:id="@+id/tv_measure_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线标注"
                android:textColor="#fff"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_area_mark"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/map_utils_area"/>
            <TextView
                android:id="@+id/tv_measure_areas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="面标注"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_any_mark"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/map_utils_area"/>
            <TextView
                android:id="@+id/tv_measure_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="随手标注"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
